    <TextView style="@style/help_text" android:text="@string/pref_usb_charge_time_help" />
    <TextView style="@style/help_pref" android:text="@string/pref_ac_charge_time" />
    <TextView style="@style/help_text" android:text="@string/pref_ac_charge_time_help" />

