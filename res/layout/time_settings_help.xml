    <TextView style="@style/help_text" android:text="@string/pref_light_usage_time_help" />

    <TextView style="@style/help_pref" android:text="@string/pref_show_normal_usage" />
    <TextView style="@style/help_text" android:text="@string/pref_show_normal_usage_help" />
